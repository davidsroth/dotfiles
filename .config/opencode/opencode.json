{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "model": "openai/gpt-5",
      "prompt": "{file:./prompts/main.md}",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      }
    },
    "build": {
      "model": "openai/gpt-5",
      "prompt": "{file:./prompts/main.md}",
      "reasoningEffort": "medium",
      "reasoningSummary": "auto",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "search": {
      "description": "Web research and local code reading",
      "model": "openai/gpt-5",
      "reasoningEffort": "medium",
      "reasoningSummary": "auto",
      "prompt": "You are a web search agent equipped with web access.\n\n- Browse the web to collect authoritative sources and summarize concisely.\n- Read local files to provide precise, file-referenced answers.\n- When uncertain, state assumptions and suggest verification steps.\n",
      "tools": {
        "write": false,
        "edit": false,
        "patch": false,
        "bash": true,
        "webfetch": true
      },
      "permission": {
        "edit": "deny",
        "webfetch": "allow"
      }
    }
  },
  "mcp": {
    "sunsama": {
      "type": "local",
      "enabled": true,
      "command": [
        "bash",
        "-lc",
        "/Users/davidroth/projects/mcp-sunsama/start-with-auth.sh"
      ]
    }
  }
}
